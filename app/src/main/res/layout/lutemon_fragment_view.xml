<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutCompat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewLutemonFrag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textViewNameFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#8BFFFFFF"
        android:fontFamily="serif"
        android:text="Name"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHealthFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#8BFFFFFF"
        android:fontFamily="serif"
        android:text="Health"
        android:textColor="@color/purple_700"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewAttackFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#8BFFFFFF"
        android:fontFamily="serif"
        android:text="Attack"
        android:textColor="@color/purple_700"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewExpFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#8BFFFFFF"
        android:fontFamily="serif"
        android:text="Exp"
        android:textColor="@color/purple_700"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnPlace1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/purple_200"
            android:drawableTint="@color/white"
            android:src="@drawable/baseline_sports_martial_arts_24" />

        <Button
            android:id="@+id/btnPlace2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/purple_200"
            android:drawableTint="@color/white"
            android:src="@drawable/baseline_spa_24" />
    </LinearLayout>

    <Button
        android:id="@+id/btnReadyToFight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to fight!"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>